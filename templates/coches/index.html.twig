{% extends 'base.html.twig' %}

{% block title %}Coches index{% endblock %}

{% block body %}
    <h1>Coches index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coch in coches %}
            <tr>
                <td>{{ coch.id }}</td>
                <td>{{ coch.Nombre }}</td>
                <td>{{ coch.Apellidos }}</td>
                <td>{{ coch.Direccion }}</td>
                <td>{{ coch.Telefono }}</td>
                <td>
                    <a href="{{ path('app_coches_show', {'id': coch.id}) }}">show</a>
                    <a href="{{ path('app_coches_edit', {'id': coch.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_coches_new') }}">Create new</a>
{% endblock %}
